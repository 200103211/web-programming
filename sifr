			<script>
				const time = 5000; // ms
const step = 1; 

function outNum(num, elem) {
	let l = document.querySelector('#' + elem);
	n = 0;
	let t = Math.round(time/(num/step));
	let interval = setInterval(() => {
		n = n + step;
		if (n == num) {
			clearInterval(interval);
		}
		l.innerHTML = n;
	},
		t);
}

outNum(1802, 'out-1');
outNum(1802, 'out-2');
			</script>
